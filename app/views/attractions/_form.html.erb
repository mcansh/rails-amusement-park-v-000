<%= form_for @attraction do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>

  <fieldset>
    <%= f.label :min_height, 'Height Requirement (in inches)' %>
    <%= f.number_field :min_height, min: 1 %>
  </fieldset>

  <fieldset>
    <%= f.label :happiness_rating, 'How fun is it? (1-5 scale)' %>
    <%= f.number_field :happiness_rating, min: 1, max: 5 %>
  </fieldset>

  <fieldset>
    <%= f.label :nausea_rating, 'How nausea-inducing is it? (1-5 scale)' %>
    <%= f.number_field :nausea_rating, min: 1, max: 5 %>
  </fieldset>

  <fieldset>
    <%= f.label :tickets, 'How many tickets does it cost?' %>
    <%= f.number_field :tickets %>
  </fieldset>

  <fieldset>
    <%= f.submit %>
  </fieldset>
<% end %>
